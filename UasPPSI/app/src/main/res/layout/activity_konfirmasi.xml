<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context=".KonfirmasiActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgNotig"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/logo"/>

        <TextView
            android:id="@+id/textPemb"
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Konfirmasi Pegawai"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textTamu"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"
            android:textSize="15sp"
            android:text="Konfirmasi Pegawai :  "/>

        <TextView
            android:id="@+id/etNama"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="15sp"
            android:text="Nama Tamu"/>
    </LinearLayout>


    <View
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"/>

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgFotoTamu"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:layout_width="140dp"
            android:layout_height="110dp"
            android:src="@drawable/profil"/>


        <Button
            android:id="@+id/btnEmail"
            android:layout_toRightOf="@id/imgFotoTamu"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Email"/>

        <Button
            android:id="@+id/btnTelp"
            android:layout_toRightOf="@id/imgFotoTamu"
            android:layout_below="@id/btnEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Telpon"/>

        <Button
            android:id="@+id/btnSMS"
            android:layout_toRightOf="@id/imgFotoTamu"
            android:layout_below="@id/btnTelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="SMS"/>
    </RelativeLayout>

    <View
        android:id="@+id/View2"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"/>

    <TextView
        android:id="@+id/textKonfirmasi"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        android:text="Konfirmasi Pegawai"/>

    <Button
        android:id="@+id/btnYa"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="Dapat Menemui"/>

    <Button
        android:id="@+id/btnTidak"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="Tidak Dapat Menemui"/>

</LinearLayout>
