<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgFotoTamuMasuk2"
            android:layout_marginRight="10dp"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/profil"/>

        <TextView
            android:id="@+id/data_nama_masuk"
            android:layout_toRightOf="@id/imgFotoTamuMasuk2"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="17sp"
            android:text="Nama"/>

        <TextView
            android:id="@+id/data_instansi_masuk"
            android:layout_toRightOf="@id/imgFotoTamuMasuk2"
            android:layout_below="@id/data_nama_masuk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Instansi"/>

        <TextView
            android:id="@+id/data_tujuan_masuk"
            android:layout_toRightOf="@id/imgFotoTamuMasuk2"
            android:layout_below="@id/data_instansi_masuk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Tujuan"/>

    </RelativeLayout>

</LinearLayout>