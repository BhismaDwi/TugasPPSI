<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.bhisma.visitorbook.Activity.RegisterActivity">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:paddingTop="16dp"
            android:src="@drawable/logo"/>

        <TextView
            android:id="@+id/textRegister"
            android:layout_below="@id/imgLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:text="Register Here"/>

        <View
            android:id="@+id/garis"
            android:layout_below="@id/textRegister"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimary"/>

        <RadioGroup
            android:id="@+id/rbg"
            android:layout_below="@id/garis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cbSecurity"
                android:textSize="15sp"
                android:checked="true"
                android:text="Security" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cbEmployee"
                android:textSize="15sp"
                android:text="Employee" />

        </RadioGroup>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/layetInputNama"
            android:layout_below="@id/rbg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginBottom="10dp">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/etInputNama"
                android:hint="Nama"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/layetInputUsername"
            android:layout_below="@id/layetInputNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginBottom="10dp">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/etInputUsername"
                android:hint="Username"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/layetInputNotelp"
            android:layout_below="@id/layetInputUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginBottom="10dp">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/etInputNotelp"
                android:hint="No Telp"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/layetInputEmail"
            android:layout_below="@id/layetInputNotelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:layout_marginBottom="10dp">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/etInputEmail"
                android:hint="Email"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/layetInputPassword"
            android:layout_below="@id/layetInputEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/etInputPassword"
                android:inputType="textPassword"
                android:hint="Password"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/layetInputConfirmPassword"
            android:layout_below="@id/layetInputPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/etInputConfirmPassword"
                android:inputType="textPassword"
                android:hint="Confirm Password"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:layout_height="wrap_content"
                android:ems="10"/>

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btnRegisterNow"
            android:layout_below="@id/layetInputConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="Register"/>

        <TextView
            android:id="@+id/backLogin"
            android:layout_below="@+id/btnRegisterNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:paddingLeft="16dp"
            android:text="Already Have an Account ? Login Here"/>
    </RelativeLayout>

</ScrollView>